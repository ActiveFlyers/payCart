<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="state" label="COM_PAYCART_STATE_FIELDSET_LABEL">		
		<field 	name="state_id"
				type="hidden" />
		
  		<field 	name="isocode"
				type="text"
				maxlength="7"
				required="true"
				label="COM_PAYCART_ADMIN_ISOCODE" />
				
		<field 	name="country_id"
				type="text"
				maxlength="3"
				required="true"
				label="COM_PAYCART_ADMIN_COUNTRY_ID"
				readonly="true" />
			
		<field 	name="published" type="radio"
				default="1"
				label="COM_PAYCART_ADMIN_PUBLISHED" 
				class="btn-group">
				<option value='1'>JYES</option>
				<option value='0'>JNO</option>
		</field>
	</fieldset>
	
	<fieldset name='language'>
		<field 	name="state_lang_id" 
				type="hidden" />
				
		<field 	name="lang_code" 
				type="hidden" />
		
		<field 	name="title" 
				type="text"
				label="COM_PAYCART_ADMIN_TITLE"	
				required="true"			 
				/>
	</fieldset>		
</form>
