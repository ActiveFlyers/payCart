<?xml version="1.0" encoding="UTF-8"?>

<form>
		<fieldset name="basic-cart">
			<field name="cart_id" type="text"
				label="COM_PAYCART_ADMIN_CART_ID"
				required="true"
				readonly="true"
			/>
			
			<field name="buyer_id" type="user"
				label="COM_PAYCART_ADMIN_BUYER"
				required="true"
				readonly="true"
				class="readonly"
			/>
			
			<field name="invoice_id" type="text"
				label="COM_PAYCART_ADMIN_CART_INVOICE_ID"
				required="true"
				readonly="true"
			/>
			
			<field name="status" type="paycart.cartstatus"
				label="COM_PAYCART_ADMIN_STATUS"
			/>
			
			<field name="currency" type="text"
				label="COM_PAYCART_ADMIN_CURRENCY"
				readonly="true"
			/>
			
			<field name="reversal_for" type="text"
				label="COM_PAYCART_ADMIN_REVERSAL_FOR"
				readonly="true"
			/>
			
			<field name="ip_address" type="text"
				label="COM_PAYCART_ADMIN_IP_ADDRESS"
				readonly="true"	
			/>
			
			<field name="billing_address_id" type="text"
				label="COM_PAYCART_ADDRESS_BILLING"
				readonly="true"	
			/>
			
			<field name="shipping_address_id" type="text"
				label="COM_PAYCART_ADDRESS_SHIPPING"
				readonly="true"	
			/>
			
			<field name="is_locked" type="text"
				label="COM_PAYCART_ADMIN_CART_IS_LOCKED"
				readonly="true"
			/>
			
			
		</fieldset>
		
		<fieldset name="cart-dates">
			
			<field name="created_date" type="calendar"
				default=""
				label="COM_PAYCART_ADMIN_CREATED_DATE" 
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"
			/>
			
			<field name="modified_date" type="calendar"
				label="COM_PAYCART_ADMIN_MODIFIED_DATE" 
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"
			/>
			
			<field name="locked_date" type="calendar"
				default="0000-00-00 00:00:00"
				label="COM_PAYCART_ADMIN_CART_LOCKED_DATE"
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"
			/>
			
			<field name="paid_date" type="calendar"
				default="0000-00-00 00:00:00"
				label="COM_PAYCART_ADMIN_CART_PAID_DATE"		
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"	
			/>
			
			<field name="completed_date" type="calendar"
				default="0000-00-00 00:00:00"
				label="COM_PAYCART_ADMIN_CART_COMPLETED_DATE"		
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"		
			/>
			
			<field name="cancelled_date" type="calendar"
				default="0000-00-00 00:00:00"
				label="COM_PAYCART_ADMIN_CART_CANCELLED_DATE"		
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"
			/>
			
		</fieldset>
</form>
