<?xml version="1.0" encoding="UTF-8"?>
<form>
		<fieldset 	name="buyeraddress" label="COM_PAYCART_BUYERADDRESS_FIELDSET_LABEL">
			
			<field 	name="buyeraddress_id" type="hidden"
					default="0"
					label="COM_PAYCART_BUYERADDRESS_ID"
					readonly="true"
			/>
			
			<field 	name="buyer_id" type="hidden"
					default="0"
					label="COM_PAYCART_BUYERADDRESS_BUYER_ID_LABEL"
					readonly="true"
			/>
			
			
			<field 	name="to" type="text"
					label="COM_PAYCART_BUYERADDRESS_NAME_LABEL"
					required="true"
			/>
			
			<field 	name="address" type="textarea"
					label="COM_PAYCART_BUYERADDRESS_ADDRESS"	
					required="true"
			/>
			
			<field 	name="country" type="paycart.country"
					label="COM_PAYCART_BUYERADDRESS_COUNTRY"
					required="true"
			/>
			
			<field 	name="state" type="paycart.state"
					label="COM_PAYCART_BUYERADDRESS_STATE"	
					required="true"
			/>
			
			<field 	name="city" type="text"
					label="COM_PAYCART_BUYERADDRESS_CITY"	
					required="true"
			/>
			
			<field 	name="zipcode" type="paycart.zipcode"
					label="COM_PAYCART_BUYERADDRESS_ZIPCODE"
					required="true"
			/>
			
			
			<field 	name="vat_number" type="paycart.vatnumber"
					label="COM_PAYCART_BUYERADDRESS_VAT_NUMBER"	
					required="true"
			/>
			
			<field 	name="phone1" type="text"
					label="COM_PAYCART_BUYERADDRESS_PHONE1"	
					required="true"
			/>
			
			<field 	name="phone2" type="text"
					label="COM_PAYCART_BUYERADDRESS_PHONE2"
					required="true"
			/>

		</fieldset>				
</form>
