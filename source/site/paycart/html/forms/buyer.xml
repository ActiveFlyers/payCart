<?xml version="1.0" encoding="UTF-8"?>

<form>
		<fieldset name="basic-user" label="COM_PAYCART_CART_BASIC_USER_FIELDSET_LABEL">
			<field 	name="buyer_id"
				type="hidden"
				default="0"
				readonly="true"/>

  		<field 	name="realname" 
				type="text"
				label="COM_PAYCART_USER_NAME_LABEL"
				description="COM_PAYCART_USER_NAME_DESC"	
				required="true"			 
				labelclass="control-label"/>

		<field 	name="username" 
				type="text"
				label="COM_PAYCART_USER_USERNAME_LABEL"
				description="COM_PAYCART_USER_USERNAME_DESC"
				default=""
				required="true"	
				labelclass="control-label"/>

		<field 	name="email" 
				type="email"
				label="COM_PAYCART_USER_EMAIL_LABEL"
				description="COM_PAYCART_USER_EMAIL_DESC"				
				labelclass="control-label"
				required="true"/>

		<field 	name="usertype" 
				type="text"
				readonly="true"
				label="COM_PAYCART_USER_USERTYPE_LABEL"
				description="COM_PAYCART_USER_USERTYPE_DESC" 
				labelclass="control-label"/>

		<field 	name="mobile" 
				type="text"
				label="COM_PAYCART_USER_MOBILE_LABEL"
				description="COM_PAYCART_USER_MOBILE_DESC"				 
				labelclass="control-label"/>

		</fieldset>
</form>
