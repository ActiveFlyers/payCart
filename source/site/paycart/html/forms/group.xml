<?xml version="1.0" encoding="UTF-8"?>

<form>
	<fieldset name="group">
		<field 	
			name="group_id" 
			type="hidden"
			default="0"/>
		
		<field 
			name="title" 
			type="text"	
			required="true"
			class="input-block-level"
			labelclass="control-label"			
			label="COM_PAYCART_ADMIN_TITLE"/>
				
		<field 
			name="description" 
			type="textarea"				
			labelclass="control-label"
			class="input-block-level"
			label="COM_PAYCART_ADMIN_DESCRIPTION"/>
			
		<field
			name="published"
			type="radio"
			labelclass="control-label"
			class="btn-group"
			label="COM_PAYCART_ADMIN_PUBLISHED"			
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field
			name="type"
			type="text"
			labelclass="control-label"
			class="input-block-level"
			readonly="true"
			label="COM_PAYCART_ADMIN_TYPE"/>
			
		<field
			name="operator"
			type="list"
			labelclass="control-label"
			class="btn-group"
			label="COM_PAYCART_ADMIN_SELECT_OPERATOR"	
			description="COM_PAYCART_ADMIN_SELECT_OPERATOR_DESC"		
			default="AND">
			<option value="AND">COM_PAYCART_QUERY_OPERATOR_AND</option>
			<option value="OR">COM_PAYCART_QUERY_OPERATOR_AND</option>
		</field>
				
		<fields name="params">
		</fields>		
	</fieldset>
</form>
