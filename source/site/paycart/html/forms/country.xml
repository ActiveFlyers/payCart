<?xml version="1.0" encoding="UTF-8"?>

<form>
	<fieldset name="country" label="COM_PAYCART_COUNTRY_FIELDSET_LABEL">
		
		<field 	name="country_id"
				type="text"
				maxlength="3"
				required="true"
				label="COM_PAYCART_ADMIN_COUNTRY_ISOCODE_3"
				labelclass="control-label"
				/>

  		
  		<field 	name="isocode2"
				type="text"
				maxlength="2"
				required="true"
				label="COM_PAYCART_ADMIN_COUNTRY_ISOCODE_2"
				labelclass="control-label"
				/>
  		

		<field 	name="call_prefix" 
				type="text"
				label="COM_PAYCART_ADMIN_COUNTRY_CALL_PREFIX"
				required="true"	
				labelclass="control-label"/>

		<field 	name="zip_format" 
				type="text"
				label="COM_PAYCART_ADMIN_COUNTRY_ZIP_FORMAT"
				description="COM_PAYCART_ADMIN_COUNTRY_ZIP_FORMAT_DESC"				
				labelclass="control-label"
				required="true"
				maxlength="7"
				/>

		<field 	name="published" type="radio"
				default="1"
				label="COM_PAYCART_ADMIN_PUBLISHED" 
				class="btn-group">
				<option value='1'>JYES</option>
				<option value='0'>JNO</option>
		</field>
	</fieldset>
		
	<fieldset name='language'>
		<field 	name="country_lang_id"
				type="hidden" />
				
		<field 	name="lang_code" 
				type="hidden" />
		
		<field 	name="title" 
				type="text"
				label="COM_PAYCART_ADMIN_TITLE"
				required="true"			 
				labelclass="control-label"/>
	</fieldset>
</form>
