<?xml version="1.0" encoding="UTF-8"?>

<form>
	<fieldset name="paymentgateway">
		<field 	
			name="paymentgateway_id" 
			type="hidden"
			default="0"/>
		
		<field 
			name="title" 
			type="text"	
			required="true"
			class="input-block-level"
			labelclass="control-label"			
			label="COM_PAYCART_ADMIN_TITLE"
			placeholder="asasa"
			/>
				
		<field 
			name="description" 
			type="textarea"
			class="input-block-level"				
			labelclass="control-label"
			label="COM_PAYCART_ADMIN_DESCRIPTION"
			/>
			
		<field
			name="published"
			type="radio"
			labelclass="control-label"
			class="btn-group"
			label="COM_PAYCART_ADMIN_PUBLISHED"
			
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field
			name="processor_type"
			type="paycart.paymentgateway"
			labelclass="control-label"
			label="COM_PAYCART_ADMIN_TYPE"
			default="" />
			
<!--	fields must be compulsory. Other wise processor config data will not bind. 		-->
		<fields name="processor_config">
		
		</fields>		
	
	</fieldset>	
		
	<fieldset name='language'>
		<field 
			name="paymentgateway_lang_id"
			type="hidden"
			default="0"
			/>
			
		<field 
			name="lang_code"
			type="hidden"/>	
	</fieldset>	

</form>
