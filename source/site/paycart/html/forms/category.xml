<?xml version="1.0" encoding="UTF-8"?>
<form>
		<fieldset name="basic-attributes" label="COM_PAYCART_PRODUCT_BASIC_ATTRIBUTES_FIELDSET_LABEL">
			<field name="category_id" type="text"
				default="0"
				label="COM_PAYCART_CATEGORY_ID_LABEL"
				description="COM_PAYCART_CATEGORY_ID_DESC"
				readonly="true"
				size="10"
			/>
			<field name="title" type="text"
				label="COM_PAYCART_CATEGORY_TITLE"
				description="COM_PAYCART_CATEGORY_TITLE_DESC"
				required="true"
			/>
			<field name="alias" type="text"
				label="COM_PAYCART_CATEGORY_ALIAS_LABEL"
				description="COM_PAYCART_CATEGORY_ALIAS_DESC"
			/>
			
			<field name="description" type="editor"
				description="COM_PAYCART_CATEGORY_DESCRIPTION_DESC"
				label="COM_PAYCART_CATEGORY_DESCRIPTION_LABEL" 
				hide="readmore,pagebreak"
			/>

<!-- Custom Element for paycart product category			-->
			<field name="parent" type="paycart.category"
				default=""
				description="COM_PAYCART_CATEGORY_DESC"
				label="COM_PAYCART_CATEGORY_PARENT_LABEL" 
				addnew="false"
			>
				<option>COM_PAYCART_SELECT_CATEGORY_PARENT</option>
			</field>
			
			<field 	name="published" type="radio"
					default="1"
					description="COM_PAYCART_CATEGORY_PUBLISHED_DESC"
					label="COM_PAYCART_CATEGORY_PUBLISHED_LABEL" 
					class="btn-group"
			>
				<option value='0'>COM_PAYCART_NO</option>
				<option value='1'>COM_PAYCART_YES</option>
			</field>
			
			<field name="cover_image" type="text"
				description="COM_PAYCART_CATEGORY_COVER_IMAGE_DESC"
				label="COM_PAYCART_CATEGORY_COVER_IMAGE_LABEL" 
			/>
			
			<field name="created_date" type="calendar"
				default=""
				description="COM_PAYCART_CATEGORY_CREATED_DATE_DESC"
				label="COM_PAYCART_CATEGORY_CREATED_DATE_LABEL" 
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"
			/>
			
			<field name="modified_date" type="calendar"
				description="COM_PAYCART_CATEGORY_MODIFIED_DATE_DESC"
				label="COM_PAYCART_CATEGORY_MODIFIED_DATE_LABEL" 
				format="%Y-%m-%d %H:%M:%S"
				readonly="true"
			/>
			
			<field name="created_by" type="text"
				description="COM_PAYCART_CATEGORY_CREATED_BY_DESC"
				label="COM_PAYCART_CATEGORY_CREATED_BY_LABEL" 
				readonly="true"
			/>		
		</fieldset>		
</form>
