	<filename plugin="pdfdownload">pdfdownload.php</filename>
	<folder>pdfdownload</folder>
	<filename>index.html</filename>
    </files>
   	<config>
   	<fields name="params">
		<fieldset name="basic">
	<field 	name="note" 
			type="textarea"
