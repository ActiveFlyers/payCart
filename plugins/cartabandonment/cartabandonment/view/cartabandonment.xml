<?xml version="1.0" encoding="UTF-8"?>

<form>
	<fieldset name="cartabandonment">
		<field 	
			name="cartabandonment_id" 
			type="hidden"
			default="0"/>

     	<field
			name="published"
			type="radio"
			labelclass="control-label"
			class="btn-group"
			label="COM_PAYCART_ADMIN_PUBLISHED"			
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field
			name="when_to_email"
			type="paycart.timer"
			month='true'
			hour='true'
			day='true'
			default="000000000000"		 
			labelclass="control-label"
			class="input-block-level"
			label="PLG_PAYCART_CART_ABANDONMENT_WHEN_TO_EMAIL"
			 />
			 
		<field
            name="title"  
        	type="text"	required="true"
            class="input-block-level"
			labelclass="control-label"			
			label="COM_PAYCART_ADMIN_TITLE"/>
                
<!--  Make sure field type is not email otherwise validation will be stop to save it               -->
        <field
            name="to"  
        	type="text"	required="true"
            class="input-block-level paycart-token-container"
			labelclass="control-label"			
			label="COM_PAYCART_ADMIN_NOTIFICATION_TO"/>

		<field 
			name="bcc" 
			type="text"	
			class="input-block-level paycart-token-container"
			labelclass="control-label"			
			label="COM_PAYCART_ADMIN_NOTIFICATION_BCC"/>		
	</fieldset>
	
	<fieldset name='language'>
		<field 	name="cartabandonment_lang_id" 
				type="hidden"
				default="0"/>
				
		<field 	name="lang_code" 
				type="hidden" />
		
		<field 	name="subject"  
				type="text"	
                required="true"
				class="input-block-level paycart-token-container"
				labelclass="control-label"			
				label="COM_PAYCART_ADMIN_NOTIFICATION_SUBJECT"/>
            
		<field 	name="body"  
				required="true"
				type="editor"	
                class="input-block-level paycart-token-container"
				labelclass="control-label"			
				label="COM_PAYCART_ADMIN_NOTIFICATION_BODY"
            	rows="10" 
				filter="JComponentHelper::filterText"/>			
	</fieldset>
</form>
