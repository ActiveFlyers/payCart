<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.0"
	client="site"
	method="upgrade">
	<name>PayCart Cart Module</name>
	<author>Team Readybytes</author>
	<creationDate>Oct 2014</creationDate>
	<copyright>Copyright (C) 2005 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support+paycart@readybytes.in</authorEmail>
	<authorUrl>www.readybytes.in</authorUrl>
	<version>1.0.0</version>
	<description>Render current cart link with number of products.</description>
	<files>
		<filename module="mod_paycart_cart">mod_paycart_cart.php</filename>
		<folder>tmpl</folder>
		<filename>index.html</filename>		
		<filename>mod_paycart_cart.xml</filename>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>				
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
			</fieldset>
		</fields>
	</config>
	
    <alias>pc-module-cart</alias>
    <version_number>1.0.0</version_number>
    <version_name>Cart Module 1.0</version_name>

</extension>
